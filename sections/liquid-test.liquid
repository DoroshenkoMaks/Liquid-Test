<div class="section section--custom">
  <div class='section-header'>
    <h2>{{ section.settings.title }}</h2>
  </div>
  <ul class="grid">
    {% for block in section.blocks %}
      <li class="grid__item">
        <div class="grid-view-item product-card">


          {{ product | image_url: block.settings.image | image_tag }}

          <p>{{ block.settings.block_text }}</p>
        </div>
      </li>
    {% endfor %}
  </ul>
  <div class="section__items">
    {%- for item in section.items -%}
      <div class="item">
        <img src="{{section.items.settings.image | image_url: 'master'}}" width="200" height="200">
        {{ product | image_url: width: 200 | image_tag }}
        <h3>{{ item.settings.items_title }}</h3>
        <p>{{ item.settings.items_description }}</p>
        <p>{{ item.settings.items_description }}</p>
      </div>
    {%- endfor -%}
  </div>

</div>



{% schema %}
  {
    "name": "Liquid Test",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Liquid Test"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Custom Blocks",
        "settings": [
          {
            "type": "richtext",
            "id": "block_text",
            "label": "Block Text",
            "default": "Block"
          }, {
            "type": "image_picker",
            "id": "image",
            "label": "Pick an Image"
          }
        ]
      }, {
        "type": "text",
        "name": "Custom Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Pick an Item Image"
          }, {
            "type": "text",
            "id": "items_title",
            "label": "Item Title",
            "default": "Item"
          }, {
            "type": "richtext",
            "id": "items_description",
            "label": "Item Description",
            "default": "Description"
          }
        ]
      }, {
        "type": "button",
        "name": "Button",
        "settings": [
          {
            "type": "text",
            "id": "button_label",
            "label": "Heading button",
            "default": "Button"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Liquid Test",
        "blocks": [
          {
            "type": "text"
          }, {
            "type": "text"
          }, {
            "type": "button"
          }
        ]

      }
    ]
  }
{% endschema %}